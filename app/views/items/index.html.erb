<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="pull-right">
        <a href="items/new"><input type="button" value="New Item"></input></a>
      </div>
      <table width="100%" height="100%" border="1%" align="center">
        <thead align="center">
          <tr>
            <th align="center">NAME</th>
            <th align="center">PRICE</th>
          </tr>
        </thead>
        <tbody>
          <%@items.each do |i|%>
            <tr>
              <td><a href = "/items/<%= i.id%>"><%=i.name%></a></td>
              <td><%#=i.price%></td>
              <td><a href = "/items/<%= i.id%>/edit">edit</a></td>
              <td><a href = "/items/<%= i.id%>" data-method="delete">destroy</a></td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>
