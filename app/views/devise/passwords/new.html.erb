<style type="text/css">
  .btn-primary, .btn-primary:hover, .btn-primary:active, .btn-primary:visited {
      background-color: #24A9A5 !important;
  }
</style>
<!-- Top content -->
<div class="top-content">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text">
                    <h1>
                        <strong style="color:#24A9A5; font-weight: bolder">MyFoodie</strong></h1>
                    <div class="description">
                      <p style="color:#ff0000 ; font-weight: bolder">
                          Online Food Delivery.

                      </p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h3>Forgot your password?</h3>
                            <p>Enter your email to send request to reset your password</p>
                        </div>
                        <div class="form-top-right">
                          <img src="<%= asset_path 'MYFoodie.png' %>"   style="max-height: 90px;" align="right">
                        </div>
                    </div>
                    <div class="form-bottom">


                    <% if resource.errors.any? %>
                      <div class="row">
                        <div class="alert alert-danger">
                          <strong>Error: <%= resource.errors.full_messages %></strong>
                        </div>
                      </div>
                    <% end %>

                      <%= form_for(resource, as: resource_name, url: password_path(resource_name), class: 'form-control', html: { method: :post }) do |f| %>
                      <div class="form-group">
                        <label class="sr-only" for="form-username">Email</label>
                        <%= f.text_field :email, autofocus: true, class: 'form-username form-control', placeholder: "Email..." %>

                      </div>
                      <div class="form-group">
                          <button type="submit" class="btn form-control btn btn-primary">Send me reset password instructions</button>
                      </div>
                      <% end %>
                      <div class="form-group">
                        <%= render "devise/shared/links" %>
                      </div>
                    </div>



                    </div>
                </div>
            </div>


</div>



<script>
jQuery(document).ready(function() {
    /*
        Fullscreen background
    */
    $.backstretch(MyFoodie_bg);

});

</script>

